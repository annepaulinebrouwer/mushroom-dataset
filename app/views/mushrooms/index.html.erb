<div class="container">
  <div class="row">
    <div class="col">
        Find your mushroom
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
    <% @mushrooms.each do |mushroom| %>
      <div class="card-product">
        <%= image_tag "mushroom.jpg", alt: "Mushroom" %>
        <div class="card-product-infos">
          <h2>Mushroom <%=mushroom.id %> </h2>
          <p>
            <% mushroom.attributes.each do |key, value| %>
              <%= key %>: <%= value %>
            <% end %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
